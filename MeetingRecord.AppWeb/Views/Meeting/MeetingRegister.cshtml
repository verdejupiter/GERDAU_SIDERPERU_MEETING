                                                <input type="text" id="txt-meeting-code" name="txt-meeting-code" placeholder="Buscar" readonly>
                                                <label for="txt-meeting-code">Cod.Reunión</label>
                                            </div>
                                        </div>
                                        <!-- Área --> <!-- AMENDEZ5 -->
                                        <div class="col s12 m5" style="padding-top: 8px;">
                                            <div class="input-field-with-icon">
                                                <select name="cbo-area" id="cbo-area" class="select-dropdown select-with-search pmd-select2 form-control">
